{
    "version": 2,
    "builds": [
        {
            "src": "resume/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.12"
            }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles"
            }
        }
    ],
    "build": {
        "env": {
            "DJANGO_COLLECTSTATIC": "1"
        },
        "commands": [
            "python manage.py collectstatic --noinput"
        ]
    },
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "resume/wsgi.py"
        }
    ]
}